
@{
    ViewBag.Title = "Index";

}

<h2>Hola chavales</h2>

<table id="table_id" class="display">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Edad</th>
        </tr>
    </thead>
    <tbody>
        
    </tbody>
</table>

@section scripts{
<script>
    $(document).ready(function () {
        $("#table_id").DataTable({
            "processing": true,
            "serverSide": true,
            "ajax": {
                "url": "@Url.Content("~/Personas/Json")",
                "type": "POST",
                "datatype":"json"
            },
            "pageLength": 10,
            "filter": true,
            "responsivePriority": 1,
            "data": null,
            "columns": [
                { "data": "Id", "name": "Id", "autoWidth": true },
                { "data": "Nombre", "name": "Nombre", "autoWidth": true },
                { "data": "Edad", "name": "Edad", "autoWidth": true }
            ]

        });
    })
</script>
}

